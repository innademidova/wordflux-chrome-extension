{
    "manifest_version": 3,
    "name": "WordFlux",
    "version": "1.0",
    "description": "A Chrome extension built with React and Vite.",
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/nowater.png",
        "48": "icons/nowater.png"
      }
    },
    "background": {
      "service_worker": "background.js",
      "type": "module"
    },
    "permissions": ["storage", "activeTab", "scripting"],
    "icons": {
      "16": "icons/nowater.png",
      "48": "icons/nowater.png"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }
  